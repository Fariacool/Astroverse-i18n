{
    "headers": [
      {
        "source": "/sitemap-index.xml",
        "headers": [
          { "key": "Content-Type", "value": "application/xml" }
        ]
      },
      {
        "source": "/sitemap-0.xml",
        "headers": [
          { "key": "Content-Type", "value": "application/xml" }
        ]
      },
      {
        "source": "/sitemap-*.xml",
        "headers": [
          { "key": "Content-Type", "value": "application/xml" }
        ]
      },
      {
        "source": "/(.*)",
        "headers": [
          {
            "key": "Permissions-Policy",
            "value": "fullscreen=(self), geolocation=(self)"
          }
        ]
      }
    ],
    "rewrites": [
      {
        "source": "/feedback/((?!general).*)",
        "destination": "/api/feedback/general"
      },
      {
        "source": "/user/:id",
        "destination": "/api/user/:id"
      }
    ],
    "redirects": [
      {
        "source": "/old-path",
        "destination": "/new-path",
        "permanent": true
      }
    ],
    "functions": {
      "api/**/*.js": {
        "memory": 128,
        "maxDuration": 10
      }
    },
    "cleanUrls": true,
    "trailingSlash": false
  }
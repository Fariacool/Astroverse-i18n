---
import { SEO } from "astro-seo";

interface Props {
  title: string;
  description: string;
  canonical: string;
  noindex?: boolean;
  nofollow?: boolean;
  charset?: string;
  languageAlternates?: Array<{ href: string; hrefLang: string }>;
  openGraph?: {
    basic: {
      title: string;
      type: string;
      image: string;
      url: string;
    };
    optional?: {
      siteName: string;
      locale: string;
      description: string;
      localeAlternate?: string[];
    };
  };
  twitter?: {
    card?: "summary" | "summary_large_image" | "app" | "player";
    site?: string;
    creator?: string;
    title?: string;
    description?: string;
    image?: string;
    imageAlt?: string;
  };
  extend?: {
    link?: Array<{ rel: string; href: string; hreflang?: string }>;
    meta?: Array<{ name?: string; content: string; property?: string }>;
  };
}

const {
  title,
  description,
  canonical,
  noindex = false,
  nofollow = false,
  charset = "UTF-8",
  languageAlternates = [],
  openGraph,
  twitter,
  extend = { link: [], meta: [] },
} = Astro.props as Props;
---

<SEO
  title={title}
  description={description}
  canonical={canonical}
  noindex={noindex}
  nofollow={nofollow}
  charset={charset}
  languageAlternates={languageAlternates}
  openGraph={openGraph}
  twitter={twitter}
  extend={extend}
/>
